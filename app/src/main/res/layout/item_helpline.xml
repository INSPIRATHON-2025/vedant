<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/background_light"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Row with Name and Emergency Badge -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Emergency Indicator -->
            <ImageView
                android:id="@+id/ivEmergency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/emergency_helpline"
                android:src="@drawable/ic_emergency"
                android:visibility="gone" />

            <!-- Helpline Name -->
            <TextView
                android:id="@+id/tvHelplineName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/ivEmergency"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="AASRA" />

        </RelativeLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/tvHelplineDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="24x7 helpline for emotional support and suicide prevention"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <!-- Call Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCall"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/emerald_green"
            android:text="@string/call_now"
            android:textColor="@color/white"
            app:icon="@drawable/ic_phone"
            app:iconGravity="textStart"
            app:iconTint="@color/white" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
