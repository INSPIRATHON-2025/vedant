<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- Icon -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="24dp"
            android:contentDescription="@string/metrics_icon"
            android:src="@drawable/ic_profile"
            app:tint="@color/emerald_green" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/diet_body_metrics_title"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/diet_body_metrics_subtitle"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginBottom="32dp" />

        <!-- Age Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilDietAge"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/age_years"
            app:boxStrokeColor="@color/emerald_green"
            app:hintTextColor="@color/emerald_green">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDietAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="3"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Gender Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gender"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <RadioGroup
            android:id="@+id/rgDietGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbDietMale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/male"
                android:buttonTint="@color/emerald_green"
                android:textColor="@color/text_primary" />

            <RadioButton
                android:id="@+id/rbDietFemale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/female"
                android:buttonTint="@color/emerald_green"
                android:textColor="@color/text_primary" />

        </RadioGroup>

        <!-- Height Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilDietHeight"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/height_cm"
            app:boxStrokeColor="@color/emerald_green"
            app:hintTextColor="@color/emerald_green">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDietHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="3"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Weight Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilDietWeight"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/weight_kg"
            app:boxStrokeColor="@color/emerald_green"
            app:hintTextColor="@color/emerald_green">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDietWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLength="5"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</ScrollView>
