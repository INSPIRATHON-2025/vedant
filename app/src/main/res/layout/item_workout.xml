<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardWorkout"
    android:layout_width="280dp"
    android:layout_height="180dp"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Workout Image -->
        <ImageView
            android:id="@+id/ivWorkoutImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/workout_image" />

        <!-- Gradient Overlay for better text visibility -->
        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:background="@drawable/gradient_overlay" />

        <!-- Duration Badge -->
        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="12dp"
            android:background="@drawable/bg_duration_badge"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="@string/duration_placeholder"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <!-- Workout Title -->
        <TextView
            android:id="@+id/tvWorkoutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="16dp"
            android:text="@string/workout_title_placeholder"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Play Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/play_workout"
            app:backgroundTint="@color/emerald_green"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_play"
            app:tint="@color/white" />

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>
